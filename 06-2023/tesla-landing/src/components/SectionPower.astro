---
const {alt, url} = Astro.props;
---
<section
  class="landing-section bg-black h-screen w-screen text-center overflow-hidden relative"
  data-header-color="black"
>
  <div class="z-30 relative h-full flex flex-col">
    <header class="">
      <h2 class="text-black pt-40 text-[40px] font-medium">Solar y Powerwall</h2>
      <p class="text-black text-sm underline">Energía para todos</p>
    </header>

    <footer class="flex flex-col flex-grow justify-end pb-20">
      <div class="gap-x-4 flex mx-auto">
        <a
          class="bg-gray-600 text-sm rounded font-medium text-white px-12 py-2 inline-block hover:border-gray-500 hover:bg-gray-500 hover:text-white transition-colors"
          href="#">Saber más</a
        >
      </div>
    </footer>
  </div>

  <div class="absolute top-0 bottom-0 h-full w-full z-10">
    <img
      src=`../../public/${url}`
      alt=`${alt}`
      class="h-full w-full object-cover object-center"
    />
  </div>
</section>